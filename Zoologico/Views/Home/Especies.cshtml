@model Zoologico.Models.ViewModels.EspeciesViewModel
@{
    Layout = "Layout";
}
<h1>
    <img src="~/clases/@(Model.Id).png" /> @Model.NombreClase
</h1>

<div class="listaEspecies2">
    @foreach (var item in @Model.Especies)
    {
        <a href="~/Home/Especie/@item.Especie.Replace(" ", "-")">
            <img src="~/especies/@(item.Id).jpg" title="@item.Especie" />
        </a>
    }
</div>

<script>
    var c = document.querySelector("main h1 img").cloneNode();
    document.querySelector("main h1").appendChild(c);
</script>
